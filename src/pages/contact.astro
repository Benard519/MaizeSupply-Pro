          <a href="tel:+254111816896" class="btn btn-primary">Call Now</a>
          <a href="https://wa.me/+254111816896" class="btn btn-secondary">WhatsApp</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
    padding: 120px 0 80px;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .hero-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-info {
    background: white;
  }

  .contact-card {
    text-align: center;
    padding: 30px 20px;
    background: #f9fafb;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    background: white;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transform: translateY(-3px);
  }

  .contact-icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
  }

  .contact-card h3 {
    font-size: 1.3rem;
    color: #1f2937;
    margin-bottom: 10px;
  }

  .contact-card p {
    color: #6b7280;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  .contact-details a {
    display: block;
    color: #22c55e;
    font-weight: 600;
    font-size: 1.1rem;
    text-decoration: none;
    margin-bottom: 5px;
  }

  .contact-details a:hover {
    color: #16a34a;
  }

  .contact-note {
    color: #6b7280;
    font-size: 0.9rem;
  }

  .main-contact {
    background: #f9fafb;
  }

  .contact-form-section h2 {
    font-size: 2rem;
    color: #1f2937;
    margin-bottom: 10px;
  }

  .contact-form-section p {
    color: #6b7280;
    margin-bottom: 30px;
  }

  .contact-form {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    color: #1f2937;
    font-weight: 500;
    margin-bottom: 5px;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #22c55e;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .business-info {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    height: fit-content;
  }

  .business-info h2 {
    font-size: 2rem;
    color: #1f2937;
    margin-bottom: 30px;
  }

  .info-section {
    margin-bottom: 30px;
  }

  .info-section h3 {
    color: #1f2937;
    font-size: 1.2rem;
    margin-bottom: 10px;
  }

  .info-section p {
    color: #6b7280;
    line-height: 1.6;
    margin-bottom: 10px;
  }

  .info-section ul {
    color: #6b7280;
    padding-left: 20px;
  }

  .info-section ul li {
    margin-bottom: 5px;
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    color: #6b7280;
    padding: 8px 0;
    border-bottom: 1px solid #f3f4f6;
  }

  .hours-item:last-child {
    border-bottom: none;
  }

  .faq-section {
    background: white;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .faq-item {
    background: #f9fafb;
    padding: 25px;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    background: white;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transform: translateY(-3px);
  }

  .faq-item h3 {
    color: #1f2937;
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .faq-item p {
    color: #6b7280;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .cta {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Form Success/Error Messages */
  .form-message {
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    display: none;
  }

  .form-message.success {
    background: #f0fdf4;
    color: #166534;
    border: 1px solid #bbf7d0;
  }

  .form-message.error {
    background: #fef2f2;
    color: #dc2626;
    border: 1px solid #fecaca;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2.5rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form,
    .business-info {
      padding: 20px;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .hero-content h1 {
      font-size: 2rem;
    }

    .contact-form-section h2,
    .business-info h2 {
      font-size: 1.75rem;
    }

    .cta-content h2 {
      font-size: 1.75rem;
    }
  }
</style>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contact-form') as HTMLFormElement | null;
  if (!form) return;
    
    form.addEventListener('submit', async function(e) {
       console.log('ðŸ“¬ submit handler fired');
      e.preventDefault();
      
      // Create form message element if it doesn't exist
      let messageEl = document.querySelector('.form-message') as HTMLElement | null;
      if (!messageEl) {
        messageEl = document.createElement('div');
        messageEl.className = 'form-message';
        form.insertBefore(messageEl, form.firstChild);
      }
      
      // Send the form data to Formspree
     const response = await fetch(form.action, {
       method: 'POST',
       body: new FormData(form),
       headers: { 'Accept': 'application/json' }
     });
 
     if (response.ok) {
       messageEl.className = 'form-message success';
       messageEl.textContent = 'Thank you! Weâ€™ve received your message.';
       form.reset();
     } else {
       messageEl.className = 'form-message error';
       messageEl.textContent = 'Oopsâ€”something went wrong. Please try again.';
     }
 
     // Show the banner (and then hide it)
     messageEl.style.display = 'block';
     setTimeout(() => { messageEl.style.display = 'none' }, 5000);
    });
  });
</script>