                <option value="1-10">1-10 tons</option>
                <option value="11-50">11-50 tons</option>
                <option value="51-100">51-100 tons</option>
                <option value="101-500">101-500 tons</option>
                <option value="500+">500+ tons</option>
              </select>
            </div>
            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="5" placeholder="Please provide details about your inquiry, requirements, or any specific questions you have..." required></textarea>
