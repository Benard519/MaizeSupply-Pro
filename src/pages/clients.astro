    text-align: center;
    padding: 30px 20px;
    background: #f9fafb;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .secondary-market:hover {
    background: white;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transform: translateY(-3px);
  }

  .market-icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
  }

  .secondary-market h3 {
    font-size: 1.2rem;
    color: #1f2937;
    margin-bottom: 10px;
  }

  .secondary-market p {
    color: #6b7280;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  .client-stories {
