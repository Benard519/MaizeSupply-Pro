<style>
  .page-hero {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
    padding: 120px 0 80px;
    text-align: center;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
  }

  .hero-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .clients-overview {
    background: white;
    text-align: center;
  }

  .overview-content h2 {
    font-size: 2.5rem;
    color: #1f2937;
    margin-bottom: 30px;
  }

  .overview-content p {
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 800px;
    margin: 0 auto 40px;
    line-height: 1.7;
  }

  .client-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 30px;
    margin-top: 50px;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #22c55e;
    margin-bottom: 5px;
  }

  .stat-label {
    color: #6b7280;
    font-size: 0.95rem;
  }

  .primary-clients {
    background: #f9fafb;
  }

  .clients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 30px;
  }

  .client-category {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .client-category:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .category-icon {
    font-size: 2.5rem;
  }

  .category-header h3 {
    font-size: 1.4rem;
    color: #1f2937;
    margin: 0;
  }

  .category-description {
    margin-bottom: 25px;
  }

  .category-description p {
    color: #6b7280;
    line-height: 1.6;
  }

  .category-needs,
  .category-solutions {
    margin-bottom: 20px;
  }

  .category-needs h4,
  .category-solutions h4 {
    color: #1f2937;
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .category-needs ul,
  .category-solutions ul {
    list-style: none;
    padding: 0;
  }

  .category-needs li,
  .category-solutions li {
    padding: 5px 0 5px 20px;
    color: #4b5563;
    font-size: 0.95rem;
    position: relative;
  }

  .category-needs li::before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: #f59e0b;
    font-weight: bold;
  }

  .category-solutions li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: #22c55e;
    font-weight: bold;
  }

  .secondary-markets {
    background: white;
  }

