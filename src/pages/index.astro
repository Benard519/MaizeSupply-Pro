<style>
  .hero {
    position: relative;
    height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .hero-text {
    max-width: 600px;
    color: white;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-text p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
  }

  .business-overview {
    background: white;
  }

  .overview-content h2 {
    font-size: 2.5rem;
    color: #1f2937;
    margin-bottom: 20px;
  }

  .overview-content p {
    font-size: 1.1rem;
    color: #6b7280;
    margin-bottom: 20px;
  }

  .overview-stats {
    display: flex;
    gap: 40px;
    margin-top: 40px;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #22c55e;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #6b7280;
    margin-top: 5px;
  }

  .overview-image {
    display: flex;
    align-items: center;
  }

  .overview-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }

  .services-preview {
    background: #f9fafb;
  }

  .service-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .service-card h3 {
    font-size: 1.3rem;
    color: #1f2937;
    margin-bottom: 15px;
  }

  .service-card p {
    color: #6b7280;
    line-height: 1.6;
  }

  .who-we-serve {
    background: white;
  }

  .client-groups {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .client-group h3 {
    font-size: 1.3rem;
    color: #1f2937;
    margin-bottom: 10px;
  }

  .client-group p {
    color: #6b7280;
    line-height: 1.6;
  }

  .client-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 12px;
  }

  .why-choose-preview {
    background: #f9fafb;
  }

  .benefit-card {
    background: white;
    padding: 30px;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
  }

  .benefit-icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
  }

  .benefit-card h3 {
    font-size: 1.2rem;
    color: #1f2937;
    margin-bottom: 10px;
  }

  .benefit-card p {
    color: #6b7280;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  .cta {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-text h1 {
      font-size: 2.5rem;
    }

    .hero-text p {
      font-size: 1.1rem;
    }

    .overview-stats {
      justify-content: center;
      gap: 20px;
    }

    .stat-number {
      font-size: 2rem;
    }

    .overview-image img,
    .client-image img {
      height: 300px;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-content p {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      height: 70vh;
    }

    .hero-text h1 {
      font-size: 2rem;
    }

    .hero-text p {
      font-size: 1rem;
    }

    .overview-stats {
      flex-direction: column;
      gap: 20px;
    }

    .overview-content h2 {
      font-size: 2rem;
    }

    .cta-content h2 {
      font-size: 1.75rem;
    }
  }
</style>